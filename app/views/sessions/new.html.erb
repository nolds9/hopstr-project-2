<div class="container">

  <h2>Sign In!</h2>

  <div class="form">
    <%= form_for @user, url: session_path, method: :post do |f| %>

      <%= f.label :username %><br />
      <%= f.text_field :username %><br />

      <%= f.label :password %><br />
      <%= f.password_field :password %><br />

      <%= f.submit "Sign In" %>

    <% end %>
  </div>
</div>
