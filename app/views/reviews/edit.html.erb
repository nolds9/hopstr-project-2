<div class="container">
  <h2><%= @beer.name %></h2>

  <%= image_tag(@beer.img_url, :alt => "@beer.name") %>
  <div class="form">
    <%= form_for [@beer, @review] do |f| %>
      <%= f.label :body, "Review:" %><br />
      <%= f.text_area :body, size: "100x10" %><br />

      <%= f.submit "Update Review" %>
    <% end %>
    <%= button_to("Delete Review", [@beer, @review], method: :delete) %>
  </div>
</div>
