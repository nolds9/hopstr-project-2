<div class="container">

  <h2>Sign Up!</h2>

  <div class="form">
    <%= form_for @user do |f| %>
      <%= f.label :name %><br />
      <%= f.text_field :name %><br />

      <%= f.label :username %><br />
      <%= f.text_field :username %><br />

      <%= f.label :email %><br />
      <%= f.email_field :email %><br />

      <%= f.label :password %><br />
      <%= f.password_field :password %><br />

      <%= f.submit "Create Account" %>

    <% end %>

    <p>Have an account? <%= link_to "Sign in", new_session_path %></p>
  </div>
</div>
